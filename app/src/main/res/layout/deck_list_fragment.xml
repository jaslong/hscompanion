<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.jaslong.util.android.view.group.GroupListView
        android:id="@+id/deck_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/no_decks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_spacing"
        android:text="@string/deck_list_no_decks"
        android:visibility="gone"
        style="@android:style/TextAppearance.Large"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/spacing"
        android:layout_marginRight="@dimen/spacing"
        android:layout_marginEnd="@dimen/spacing"
        android:src="@drawable/ic_add_white_24dp"
        app:fab_colorNormal="@color/fab_normal"
        app:fab_colorPressed="@color/fab_pressed"
        app:fab_colorRipple="@android:color/white"/>

</RelativeLayout>
